<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#e77817</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">#e77817</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">#000000</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/alert_design</item>
    </style>
    <style name="MyDialogTheme2" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">#e77817</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/alert_design</item>
    </style>
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#e77817</item>
        <item name="colorControlActivated">#e77817</item>
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">#ffffff</item>
    </style>
    <style name="MyCheckBox2" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#1d4a6b</item>
        <item name="colorControlActivated">#1d4a6b</item>
    </style>
    <style name="MySpinnerItem" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">#1d4a6b</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">16dp</item>
    </style>
    <style name="MyEditText2" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#1d4a6b</item>
        <item name="colorControlActivated">#1d4a6b</item>
    </style>
</resources>
