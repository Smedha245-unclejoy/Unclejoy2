<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:Context="com.example.medhasingh.unclejoy2.Fragment5">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bullet"
        android:textColor="#020202"
        android:textSize="18dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#020202"
        android:textSize="18dp"
        android:text="@string/bullet2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#020202"
        android:textSize="18dp"
        android:text="@string/bullet3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:textColor="#020202"
        android:textSize="20dp"
        android:text="Upload your material List :"/>
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I don't have the list"
         />
    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Yes,I have the list"

        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/bigpic"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back2"
        android:layout_marginTop="5dp"
        android:text="Back"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next2"
        android:layout_gravity="right"
        android:layout_marginTop="-45dp"
        android:text="Next"/>

</LinearLayout>