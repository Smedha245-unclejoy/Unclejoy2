<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#fee6d0">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardPreventCornerOverlap="false"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:id="@+id/store"
                    android:textSize="17dp"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/created"
                    android:layout_column="2"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:drawableLeft="@drawable/clockago"
                    android:text="chandnagar"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="60dp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/type"
                    android:textColor="#000000"
                    android:layout_column="1"/>
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/location"
                    android:singleLine="false"
                    android:maxLines="5"
                    android:textIsSelectable="true"
                    android:elegantTextHeight="true"
                    android:textColor="#000000"
                    android:layout_marginLeft="60dp"
                    android:drawableLeft="@drawable/near"
                    android:drawablePadding="5dp"
                    android:layout_column="2"
                    android:text="chandnagar,newdelhi-110001" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discount Offered(%)"
                    android:layout_column="1"
                    android:textColor="#010101"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:id="@+id/discount"
                    android:background="@drawable/background"
                    android:text="date"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="time"
                    android:textColor="#ffffff"
                    android:id="@+id/ied"
                    android:layout_column="2"
                    />
            </TableRow>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Hire me"
                android:id="@+id/hire"
                android:layout_marginLeft="150dp"
                android:textAllCaps="false"
                android:background="#e69456"
                android:textSize="16dp"
                android:textColor="#f9cd9d"
                android:textStyle="bold" />

        </TableLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>