<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    tools:showin="com.example.medhasingh.unclejoy2.how_it_works">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="How it Works?"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/how_works"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:textColor="#010101" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/star2"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose the desired stores"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#020202" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload the material list you require"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textColor="#030303" />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@mipmap/material2"
            android:id="@+id/material_type"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Stores and compare Quotes"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="#020202"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your location,view best stores within your locality,suits your needs and are ready to serve you "
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#020202"
            android:textAlignment="center" />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@mipmap/select2select2"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hire the best"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:padding="20dp"
            android:textColor="#040404" />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@mipmap/hier2"
            android:layout_gravity="center"/>



    </LinearLayout>

</ScrollView>