<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.medhasingh.unclejoy2">
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
 <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
   <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.example.medhasingh.unclejoy2.AppController"
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:windowSoftInputMode="stateHidden|adjustPan"
        android:theme="@style/AppTheme">

        <activity android:name=".Welcome_logo">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />
                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
            </activity>
        <activity
            android:name=".activity_navigation"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            >
        </activity>
        <activity android:name=".Login"
            android:theme="@style/AppTheme.NoActionBar"


            />
        <activity android:name=".Signup"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".how_it_works"
            android:label=".How it works?"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".GetStarted"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".Store_list"
            android:label="Responded Stores"
            android:parentActivityName=".activity_navigation"
            android:theme="@style/AppTheme"/>
        <activity android:name=".Settings"
            android:label="Settings"
            android:parentActivityName=".activity_navigation"
            android:theme="@style/AppTheme"/>
        <activity android:name=".OTP"
            android:label="verify"/>
        <activity android:name=".ForgotPassword"
            android:label="Forgot Password"
            />
        <activity
            android:name="nl.changer.polypicker.ImagePickerActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".Profile"
            android:label="Profile settings"
            android:theme="@style/AppTheme"
            android:parentActivityName=".Settings"/>
        <activity android:name=".Pictures"
            android:label="Your Uploaded List"
            android:theme="@style/AppTheme"
            android:parentActivityName=".activity_navigation"/>
       <activity android:name=".Internet"
           android:label="Oh...no"/>

    </application>
</manifest>
